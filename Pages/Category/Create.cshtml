@page
@model BookLibrary_Razor.Pages.Category.CreateModel


<div class="container">
    <form method="post">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Create new category</h2>
                <hr />
            </div>
            <div class="mb-3 form-floating row ">
                <input asp-for="category.Name" class="form-control form-control-sm" />
                <label asp-for="category.Name"></label>
            </div>
            <div class="mb-2">
                <span asp-validation-for="category.Name" class="text-danger"></span>
            </div>
            <div class="mb-3 form-floating row">
                <input asp-for="category.DisplayOrder" class="form-control form-control-sm" />
                <label asp-for="category.DisplayOrder"></label>
            </div>
            <div class="mb-2">
                <span asp-validation-for="category.DisplayOrder" class="text-danger"></span>
            </div>
            <div class="row mt-4" style="align-items:center">
                <div class="col-6 col-md-3">
                    <button class="btn btn-sm btn-primary form-control">
                        <i class="bi bi-plus-circle mx-1"></i>Create
                    </button>
                </div>
                <div class="col-6 col-md-3">
                    <a class="btn btn-sm btn-outline-dark form-control" asp-area="" asp-page="/Category/Index">
                        <i class="bi bi-arrow-left-circle mx-1"></i>Back To List
                    </a>
                </div>

            </div>
        </div>
    </form>


    @section Scripts {
        @{
            <partial name="_ValidationScriptsPartial" />
        }
    }
</div>
